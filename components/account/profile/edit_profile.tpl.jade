.ui.segment.container
    with user
        h1.ui.center.aligned.header edit #{username} profile
        .ui.large.form
            .ui.stackable.grid
                .five.wide.column    
                    .field
                        if profile.image_id
                            .ui.centered.image
                                img.ui.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                a#remove_photo.ui.right.corner.link.label
                                    i.remove.red.link.icon
                        else
                            label add profile image
                            input(type='file' name='upload_picture' accept='image/*')
                .ten.wide.column    
                    .field
                        label spirit animal 
                        .ui.input
                            input#spirit_animal(type='text' value=profile.spirit_animal)
                    .field
                        label favorite sex position 
                        .ui.input
                            input#sex_position(type='text' value=profile.sex_position)
                    .field
                        i.email.icon
                        each emails
                            .ui.label #{address}
                            if verified
                                .ui.green.label verified
                            else
                                .ui.label unverified
                    .field
                        i.tags.icon
                        each tags
                            .ui.button.person_tag
                                i.minus.icon
                                |#{this}
                        .ui.left.icon.input
                            i.add.icon
                            input#add_tag(type='text' placeholder='Press enter after each tag' maxlength='50')
        .field
            #save_profile.ui.center.aligned.huge.icon.button
                i.checkmark.icon